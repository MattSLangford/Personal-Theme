{
  "version": "1.2",
  "title": "Typeset Theme",
  "description": "A modern, multilingual, typography-first theme for Micro.blog with clean design, excellent readability, and automatic dark mode. Features universal navigation, post differentiation, internationalization support, and comprehensive Micro.blog integration.",
  "fields": [
    {
      "field": "defaultContentLanguage",
      "label": "Default Language",
      "type": "select",
      "options": [
        {"value": "en", "label": "English"},
        {"value": "es", "label": "Español (Spanish)"},
        {"value": "fr", "label": "Français (French)"},
        {"value": "de", "label": "Deutsch (German)"},
        {"value": "pt", "label": "Português (Portuguese)"},
        {"value": "zh", "label": "中文 (Chinese)"},
        {"value": "ja", "label": "日本語 (Japanese)"},
        {"value": "ar", "label": "العربية (Arabic)"},
        {"value": "ru", "label": "Русский (Russian)"},
        {"value": "hi", "label": "हिन्दी (Hindi)"}
      ],
      "default": "en"
    },
    {
      "field": "paginate",
      "label": "Posts per Page",
      "type": "integer",
      "default": 20
    },
    {
      "field": "params.custom_avatar",
      "label": "Custom Avatar URL (optional)",
      "type": "string"
    },
    {
      "field": "params.show_post_dates",
      "label": "Show Post Dates",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.enable_smooth_animations",
      "label": "Enable Smooth Animations",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.include_conversation",
      "label": "Show Conversation Threads",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.show_reply_buttons",
      "label": "Show Reply Buttons on Posts",
      "type": "boolean",
      "default": true
    }
  ]
}