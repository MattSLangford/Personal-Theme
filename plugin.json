{
  "version": "2.0",
  "title": "Aurora Theme",
  "description": "The future of blog design. A revolutionary mobile-first theme featuring fluid typography, breathing animations, glassmorphism effects, and seamless dark mode. Built for speed, accessibility, and pure reading pleasure.",
  "fields": [
    {
      "field": "defaultContentLanguage",
      "label": "Default Language",
      "type": "select",
      "options": [
        {"value": "en", "label": "English"},
        {"value": "es", "label": "Español (Spanish)"},
        {"value": "fr", "label": "Français (French)"},
        {"value": "de", "label": "Deutsch (German)"},
        {"value": "pt", "label": "Português (Portuguese)"},
        {"value": "zh", "label": "中文 (Chinese)"},
        {"value": "ja", "label": "日本語 (Japanese)"},
        {"value": "ar", "label": "العربية (Arabic)"},
        {"value": "ru", "label": "Русский (Russian)"},
        {"value": "hi", "label": "हिन्दी (Hindi)"}
      ],
      "default": "en"
    },
    {
      "field": "paginate",
      "label": "Posts per Page",
      "type": "integer",
      "default": 15,
      "min": 5,
      "max": 50
    },
    {
      "field": "params.custom_avatar",
      "label": "Custom Avatar URL (optional)",
      "type": "string",
      "help": "Override your Micro.blog avatar with a custom image URL"
    },
    {
      "field": "params.accent_color",
      "label": "Accent Color",
      "type": "select",
      "options": [
        {"value": "aurora", "label": "Aurora Blue (default)"},
        {"value": "crimson", "label": "Crimson Red"},
        {"value": "emerald", "label": "Emerald Green"},
        {"value": "amber", "label": "Amber Gold"}
      ],
      "default": "aurora",
      "help": "Choose your theme's accent color"
    },
    {
      "field": "params.animation_level",
      "label": "Animation Level",
      "type": "select",
      "options": [
        {"value": "full", "label": "Full Animations"},
        {"value": "reduced", "label": "Reduced Animations"},
        {"value": "none", "label": "No Animations"}
      ],
      "default": "full",
      "help": "Control the level of animations and transitions"
    }
  ]
}